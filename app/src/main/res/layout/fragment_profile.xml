<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".fragment.ProfileFragment">

    <include layout="@layout/common_toolbar" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fourteen_dp"
        android:layout_marginEnd="@dimen/fourteen_dp"
        app:cardCornerRadius="@dimen/five_dp"
        app:cardElevation="@dimen/two_dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/thirty_dp"
            android:layout_marginBottom="@dimen/thirty_dp"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="132dp"
                android:layout_height="132dp">

                <com.walkins.technician.custom.CircularImageView
                    android:layout_width="132dp"
                    android:layout_height="132dp"
                    android:src="@mipmap/app_icon_logo"
                    app:civ_shadow_radius="@dimen/twenty_dp" />

                <ImageView
                    android:id="@+id/ivCamera"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/ic_camera_icon" />


            </RelativeLayout>

            <com.walkins.technician.custom.BoldHeavyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/twenty_dp"
                android:gravity="center"
                android:text="Arun Garewal"
                android:textColor="@color/header_title"
                android:textSize="@dimen/twenty_two_sp"
                android:textStyle="bold" />

            <com.walkins.technician.custom.BoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/twenty_dp"
                android:gravity="center"
                android:text="+91 9898 9898 98"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/sixteen_sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
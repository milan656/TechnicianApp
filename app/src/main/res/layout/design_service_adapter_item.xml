<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/eight_dp"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <!--    <androidx.cardview.widget.CardView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->

    <!--        android:layout_weight="1"-->
    <!--        app:cardCornerRadius="@dimen/ten_dp"-->
    <!--        app:cardUseCompatPadding="true">-->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/common_rounded"
        app:cardCornerRadius="@dimen/ten_dp"
        android:layout_weight="1"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llColor"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:elevation="@dimen/five_dp"
                android:orientation="vertical"/>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sixteen_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginTop="@dimen/fourteen_dp"
                android:layout_marginBottom="@dimen/twelve_dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.walkins.aapkedoorstep.custom.BoldHeavyTextView
                        android:id="@+id/tvRegNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="start|center"
                        android:text="GJ01RY3771"
                        android:textAllCaps="true"
                        android:textColor="@color/text_color1"
                        android:textSize="@dimen/eighteen_sp"
                        android:textStyle="bold"
                        tools:ignore="NestedWeights,TooDeepLayout" />

                    <com.walkins.aapkedoorstep.custom.NormalTextView
                        android:id="@+id/tvMakeModel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/two_dp"
                        android:gravity="start|center"
                        android:text="Maruti Suzuki Swift Desire"
                        android:textColor="@color/text_color1"

                        android:textSize="@dimen/twelve_sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/six_dp"
                    android:layout_weight="1.7"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/six_dp">

                    <ImageView
                        android:id="@+id/ivCarImage"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center|bottom"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_car_image" />

                    <com.walkins.aapkedoorstep.custom.NormalTextView
                        android:id="@+id/tvColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/four_dp"
                        android:gravity="center"
                        android:text="Red"
                        android:textColor="@color/text_color1"
                        android:textSize="@dimen/twelve_sp" />

                </LinearLayout>


            </LinearLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/cardAddService"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:background="@drawable/common_rounded"
        android:elevation="@dimen/twenty_dp"
        android:gravity="center"
        android:visibility="visible"
        android:layout_marginStart="2dp"
        android:orientation="vertical"
        android:layout_marginLeft="2dp">

        <ImageView
            android:id="@+id/ivServiceTyre"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_service_icon" />
    </LinearLayout>
    <!--    </androidx.cardview.widget.CardView>-->

</LinearLayout>
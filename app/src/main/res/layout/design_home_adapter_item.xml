<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/eight_dp"
    app:cardCornerRadius="@dimen/five_dp"
    app:cardElevation="@dimen/two_dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eighteen_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_marginEnd="@dimen/eighteen_dp"
            android:layout_marginBottom="@dimen/ten_dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.walkins.technician.custom.NormalTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titanium City center,Anandnagar"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/sixteen_sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/eighteen_dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.walkins.technician.custom.NormalTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="34"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/fourteen_sp" />

                    <com.walkins.technician.custom.NormalTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Upcoming"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/fourteen_sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.walkins.technician.custom.NormalTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textColor="@color/text_color2"
                        android:textSize="@dimen/fourteen_sp" />

                    <com.walkins.technician.custom.NormalTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Completed"
                        android:textColor="@color/text_color2"
                        android:textSize="@dimen/fourteen_sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.walkins.technician.custom.NormalTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textColor="@color/header_title"
                        android:textSize="@dimen/fourteen_sp" />

                    <com.walkins.technician.custom.NormalTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Skipped"
                        android:textColor="@color/header_title"
                        android:textSize="@dimen/fourteen_sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fourteen_dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_car" />

                <com.walkins.technician.custom.NormalTextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/eight_dp"
                    android:layout_marginLeft="@dimen/eight_dp"
                    android:alpha="0.6"
                    android:gravity="center"
                    android:text="40"
                    android:textColor="@color/text_color1"
                    android:textSize="@dimen/fourteen_sp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/ivInfo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/fourteen_dp"
            android:layout_marginEnd="@dimen/sixteen_dp"
            android:layout_marginRight="@dimen/sixteen_dp"
            android:src="@drawable/info_help" />


    </LinearLayout>


</androidx.cardview.widget.CardView>
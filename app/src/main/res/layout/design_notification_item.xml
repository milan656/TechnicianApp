<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/six_dp"
    android:background="@drawable/common_rounded"
    android:elevation="@dimen/twenty_dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/sixteen_dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.walkins.aapkedoorstep.custom.NormalTextView

                android:id="@+id/tvNotiTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/fourteen_sp" />

            <com.walkins.aapkedoorstep.custom.BoldTextView
                android:id="@+id/tvMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/eighteen_sp"
                android:textStyle="bold" />


        </LinearLayout>

        <com.walkins.aapkedoorstep.custom.NormalTextView
            android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="3"
            android:alpha="0.5"
            android:gravity="bottom|right"
            android:text="2 mins"
            android:textColor="@color/text_color1"
            android:textSize="@dimen/twelve_sp"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>
</LinearLayout>
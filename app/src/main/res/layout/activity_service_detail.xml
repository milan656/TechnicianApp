<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".activity.SkippedServiceDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        android:layout_above="@+id/llfooter"
        android:orientation="vertical"
        tools:context=".activity.SkippedServiceDetailActivity">

        <include layout="@layout/common_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eighteen_dp"
            android:layout_marginTop="@dimen/fourteen_dp"
            android:layout_marginEnd="@dimen/eighteen_dp"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/ten_dp"
                app:cardElevation="@dimen/two_dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:background="@color/red" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/sixteen_dp"
                        android:layout_marginLeft="@dimen/sixteen_dp"
                        android:layout_marginTop="@dimen/fourteen_dp"
                        android:layout_marginBottom="@dimen/fourteen_dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.walkins.technician.custom.BoldHeavyTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="start|center|bottom"
                                android:text="GJ01RY3771"
                                android:textAllCaps="true"
                                android:textColor="@color/text_color1"
                                android:textSize="@dimen/eighteen_sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center|bottom"
                                android:src="@drawable/ic_car_image" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/four_dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.walkins.technician.custom.NormalTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="start|center"
                                android:text="Maruti Suzuki Swift Desire"
                                android:textColor="@color/text_color1"

                                android:textSize="@dimen/twelve_sp" />

                            <com.walkins.technician.custom.NormalTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:text="Red"
                                android:textColor="@color/text_color1"
                                android:textSize="@dimen/twelve_sp" />


                        </LinearLayout>


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivInfoAddService"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="top"
                        android:layout_margin="@dimen/twelve_dp"
                        android:padding="@dimen/five_dp"
                        android:src="@drawable/info_in_profile"
                        app:tint="@color/colorPrimary" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eighteen_dp"
            android:layout_marginEnd="@dimen/eighteen_dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fourteen_dp"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/ten_dp"
                app:cardElevation="@dimen/two_dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/fourteen_dp"
                    android:layout_marginEnd="@dimen/sixteen_dp"
                    android:layout_marginBottom="@dimen/fourteen_dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:gravity="center"
                            android:orientation="vertical">

                            <com.walkins.technician.custom.NormalTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="start|center"
                                android:text="Service Person Name"
                                android:textColor="@color/text_color1"
                                android:textSize="@dimen/twelve_sp" />

                            <com.walkins.technician.custom.BoldTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="start|center"
                                android:text="Shriya Kaur Ghadiwale"
                                android:textColor="@color/text_color1"
                                android:textSize="@dimen/fourteen_sp" />

                        </LinearLayout>


                    </LinearLayout>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_phone_call" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llfooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/eighteen_dp"
        android:layout_marginTop="@dimen/twelve_dp"
        android:layout_marginEnd="@dimen/eighteen_dp"
        android:layout_marginBottom="@dimen/twenty_four_dp"
        android:orientation="vertical">

        <com.walkins.technician.custom.NormalTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Service Skipped on"
            android:textColor="@color/header_title"
            android:textSize="@dimen/eighteen_sp" />

        <com.walkins.technician.custom.BoldTextView
            android:id="@+id/tvCurrentDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/five_dp"
            android:layout_marginTop="@dimen/four_dp"
            android:layout_marginEnd="@dimen/five_dp"
            android:gravity="center"
            android:text="5:30 pm, 23 March 2021"
            android:textAllCaps="false"
            android:textColor="@color/header_title"
            android:textSize="@dimen/eighteen_sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/eighteen_dp"
            android:background="@drawable/layout_bg_blue_corner">

            <com.walkins.technician.custom.NormalTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/fourteen_sp"
                android:textColor="@color/text_color1"
                android:text="The car was unavailable for servicing"
                android:gravity="start|center"
                android:layout_weight="1"
                android:padding="@dimen/ten_dp"/>


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
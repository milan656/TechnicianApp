<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".activity.SkippedServiceDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llfooter"
        android:background="@color/bg_color"
        android:orientation="vertical"
        tools:context=".activity.SkippedServiceDetailActivity">

        <include layout="@layout/common_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eighteen_dp"
            android:layout_marginEnd="@dimen/eighteen_dp"
            android:background="@drawable/common_rounded"
            android:layout_marginTop="@dimen/fourteen_dp"
            android:elevation="@dimen/twenty_dp"
            android:orientation="horizontal">


            <!--                    <androidx.cardview.widget.CardView-->
            <!--                        android:layout_width="0dp"-->
            <!--                        android:layout_height="wrap_content"-->
            <!--                        android:layout_marginEnd="1dp"-->
            <!--                        android:layout_marginRight="1dp"-->
            <!--                        android:layout_weight="1"-->
            <!--                        app:cardCornerRadius="@dimen/eight_dp"-->
            <!--                        app:cardElevation="@dimen/four_dp"-->
            <!--                        app:cardUseCompatPadding="true">-->

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/common_rounded"
                app:cardCornerRadius="@dimen/ten_dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llColor"
                        android:layout_width="7dp"
                        android:layout_height="match_parent"
                        android:elevation="@dimen/five_dp"
                        android:orientation="vertical"/>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/sixteen_dp"
                        android:layout_marginLeft="@dimen/sixteen_dp"
                        android:layout_marginTop="@dimen/fourteen_dp"
                        android:layout_marginBottom="@dimen/fourteen_dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.walkins.aapkedoorstep.custom.BoldHeavyTextView
                                android:id="@+id/tvRegNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="start|center"
                                android:text="GJ01RY3771"
                                android:textAllCaps="true"
                                android:textColor="@color/text_color1"
                                android:textSize="@dimen/eighteen_sp"
                                android:textStyle="bold"
                                tools:ignore="NestedWeights,TooDeepLayout" />

                            <com.walkins.aapkedoorstep.custom.NormalTextView
                                android:id="@+id/tvMakeModel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="start|center"
                                android:layout_marginTop="@dimen/four_dp"
                                android:text="Maruti Suzuki Swift Desire"
                                android:textColor="@color/text_color1"

                                android:textSize="@dimen/twelve_sp" />



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1.7"
                            android:gravity="center"
                            android:orientation="vertical"
                            >

                            <ImageView
                                android:id="@+id/ivCarImage"
                                android:layout_width="100dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center|bottom"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_car_image" />

                            <com.walkins.aapkedoorstep.custom.NormalTextView
                                android:id="@+id/tvColor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Red"
                                android:layout_marginTop="@dimen/four_dp"
                                android:textColor="@color/text_color1"
                                android:textSize="@dimen/twelve_sp" />

                        </LinearLayout>


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivInfoAddService"
                        android:layout_width="20dp"
                        android:layout_height="18dp"
                        android:layout_gravity="top"
                        android:layout_marginTop="@dimen/sixteen_dp"
                        android:layout_marginEnd="@dimen/sixteen_dp"
                        android:layout_marginStart="@dimen/twelve_dp"
                        android:src="@drawable/info_in_profile"
                        app:tint="@color/header_title"
                        android:layout_marginRight="@dimen/sixteen_dp"
                        android:layout_marginLeft="@dimen/twelve_dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--                    </androidx.cardview.widget.CardView>-->


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eighteen_dp"
            android:layout_marginTop="@dimen/fourteen_dp"
            android:layout_marginEnd="@dimen/eighteen_dp"
            android:background="@drawable/common_rounded"
            android:elevation="@dimen/twenty_dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sixteen_dp"
                android:layout_marginTop="@dimen/fourteen_dp"
                android:layout_marginEnd="@dimen/sixteen_dp"
                android:layout_marginBottom="@dimen/fourteen_dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:gravity="center"
                        android:orientation="vertical">

                        <com.walkins.aapkedoorstep.custom.NormalTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="start|center"
                            android:text="Service Person Name"
                            android:textColor="@color/text_color1"
                            android:textSize="@dimen/twelve_sp" />

                        <com.walkins.aapkedoorstep.custom.BoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="start|center"
                            android:text="Shriya Kaur Ghadiwale"
                            android:textColor="@color/text_color1"
                            android:textSize="@dimen/fourteen_sp" />

                    </LinearLayout>


                </LinearLayout>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_phone_call" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llfooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/eighteen_dp"
        android:layout_marginTop="@dimen/twelve_dp"
        android:layout_marginEnd="@dimen/eighteen_dp"
        android:layout_marginBottom="@dimen/twenty_four_dp"
        android:orientation="vertical">

        <com.walkins.aapkedoorstep.custom.NormalTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Service Skipped on"
            android:textColor="@color/header_title"
            android:textSize="@dimen/eighteen_sp" />

        <com.walkins.aapkedoorstep.custom.BoldTextView
            android:id="@+id/tvCurrentDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/five_dp"
            android:layout_marginTop="@dimen/four_dp"
            android:layout_marginEnd="@dimen/five_dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/header_title"
            android:textSize="@dimen/eighteen_sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/eighteen_dp"
            android:background="@drawable/layout_bg_blue_corner"
            android:orientation="horizontal">

            <com.walkins.aapkedoorstep.custom.NormalTextView
                android:id="@+id/tvReason"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center"
                android:padding="@dimen/ten_dp"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/fourteen_sp" />

            <com.walkins.aapkedoorstep.custom.BoldTextView
                android:id="@+id/tvChange"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="start|center"
                android:padding="@dimen/ten_dp"
                android:text="Change"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/fourteen_sp" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
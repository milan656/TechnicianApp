<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="@dimen/eight_dp"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <!--    <androidx.cardview.widget.CardView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->

    <!--        android:layout_weight="1"-->
    <!--        app:cardCornerRadius="@dimen/ten_dp"-->
    <!--        app:cardUseCompatPadding="true">-->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/common_rounded"
        app:cardCornerRadius="@dimen/ten_dp"
        android:layout_margin="1dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lllineView"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:background="@drawable/common_rounded_line"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/fourteen_dp"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.walkins.aapkedoorstep.custom.BoldHeavyTextView
                        android:id="@+id/tvVehicleNumber"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"

                        android:gravity="start|center|top"
                        android:textColor="@color/text_color1"
                        android:textSize="@dimen/eighteen_sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ivCarimg"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center|bottom"
                        android:src="@drawable/ic_car_image" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:orientation="horizontal">

                    <com.walkins.aapkedoorstep.custom.NormalTextView
                        android:id="@+id/tvVehicleName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="start|top"
                        android:textColor="@color/text_color1"
                        android:textSize="@dimen/twelve_sp"
                        tools:ignore="NestedWeights" />

                    <com.walkins.aapkedoorstep.custom.NormalTextView
                        android:id="@+id/tvColorName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:text="Red"
                        android:textColor="@color/text_color1"
                        android:textSize="@dimen/twelve_sp" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/cardAddService"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:background="@drawable/common_rounded"
        android:elevation="@dimen/twenty_dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivServiceTyre"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_service_icon" />
    </LinearLayout>
    <!--    </androidx.cardview.widget.CardView>-->

</LinearLayout>
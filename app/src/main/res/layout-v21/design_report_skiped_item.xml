<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/six_dp"
    android:background="@drawable/common_rounded"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_rounded"
        app:cardCornerRadius="@dimen/ten_dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sixteen_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginTop="@dimen/fourteen_dp"
                android:layout_marginBottom="@dimen/fourteen_dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.walkins.aapkedoorstep.custom.BoldHeavyTextView
                        android:id="@+id/tvRegNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="start|center"
                        android:text="GJ01RY3771"
                        android:textAllCaps="true"
                        android:textColor="@color/text_color1"
                        android:textSize="@dimen/eighteen_sp"
                        android:textStyle="bold"
                        tools:ignore="NestedWeights,TooDeepLayout" />

                    <com.walkins.aapkedoorstep.custom.NormalTextView
                        android:id="@+id/tvMakeModel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/four_dp"
                        android:gravity="start|center"
                        android:text="Maruti Suzuki Swift Desire"
                        android:textColor="@color/text_color1"

                        android:textSize="@dimen/twelve_sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.7"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivCarImage"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center|bottom"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_car_image" />

                    <com.walkins.aapkedoorstep.custom.NormalTextView
                        android:id="@+id/tvColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/four_dp"
                        android:gravity="center"
                        android:text="Red"
                        android:textColor="@color/text_color1"
                        android:textSize="@dimen/twelve_sp" />

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/ivInfoAddService"
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:layout_gravity="top"
                android:layout_marginStart="@dimen/twelve_dp"
                android:layout_marginTop="@dimen/sixteen_dp"
                android:layout_marginEnd="@dimen/sixteen_dp"
                android:src="@drawable/info_in_profile"
                app:tint="@color/header_title" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>


